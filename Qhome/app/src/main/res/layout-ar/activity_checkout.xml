<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity"
    tools:context=".main.CheckoutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/toolbar_shadow">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical|right"
                android:onClick="back"
                android:src="@drawable/rightarrow_marroon"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/checkout"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_margin="10dp"
                                android:text="@string/confirm_order"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:onClick="toPhone"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/caption1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="14sp"
                                    android:layout_marginRight="8dp"
                                    android:text="@string/contact"
                                    android:textColor="#60830709"/>
                                <View
                                    android:layout_width="0px"
                                    android:layout_weight="1"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="#EBEBEB"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="16sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="20dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:onClick="toPhone"
                                android:hint="@string/add_phone"
                                android:textColorHint="@color/colorPrimary"
                                android:drawableRight="@drawable/ic_phone2"
                                android:drawablePadding="15dp"
                                android:drawableLeft="@drawable/ic_left_marroon"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shippingFrame1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:onClick="toAddress"
                            android:visibility="visible">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#EBEBEB"/>

                            <TextView
                                android:id="@+id/shippingInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/add_shipping_address"
                                android:textSize="16sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="15dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:drawableRight="@drawable/ic_shipping"
                                android:drawablePadding="15dp"
                                android:drawableLeft="@drawable/ic_left_marroon"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shippingFrame2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:paddingBottom="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_marginRight="18dp"
                                android:onClick="toAddress"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/caption2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="14sp"
                                        android:layout_marginRight="8dp"
                                        android:text="@string/shipping_address"
                                        android:textColor="#60830709"/>
                                    <View
                                        android:layout_width="0px"
                                        android:layout_weight="1"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="#EBEBEB"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:hint="@string/address"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="14sp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:drawableRight="@drawable/ic_location"
                                    android:drawablePadding="15dp"
                                    android:textColor="@color/colorPrimary"/>

                                <TextView
                                    android:id="@+id/address2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/address"
                                    android:textColorHint="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="30dp"
                                    android:textColor="@color/colorPrimary"/>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="7dp"
                                android:onClick="toAddress"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_left_marroon"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:layout_marginRight="8dp"
                                android:text="@string/bonus"
                                android:textColor="#60830709"/>
                            <View
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="#EBEBEB"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/coupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:hint="@string/use_coupon"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:onClick="toCoupons"
                            android:drawableRight="@drawable/ic_bonus"
                            android:drawablePadding="15dp"
                            android:drawableLeft="@drawable/ic_left_marroon"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:layout_marginRight="8dp"
                                android:text="@string/payment_method"
                                android:textColor="#60830709"/>
                            <View
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="#EBEBEB"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/cash"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:drawableRight="@drawable/ic_cash2"
                            android:drawablePadding="15dp"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:layout_marginRight="8dp"
                                android:text="@string/items"
                                android:textColor="#60830709"/>
                            <View
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="#EBEBEB"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:orientation="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">
                                <LinearLayout
                                    android:id="@+id/items"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                </LinearLayout>
                            </HorizontalScrollView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingTop="5dp"
                    android:background="#EBEBEB"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/subtotal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"/>
                            <TextView
                                android:id="@+id/subtotal_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="14.5USD"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shipping"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"/>
                            <TextView
                                android:id="@+id/shipping_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="1USD"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/caption6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"/>
                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="15.5USD"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/btn_confirm"
                            android:layout_width="130dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_shadow"
                            android:textSize="14sp"
                            android:onClick="confirmOrder"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:text="@string/order"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#19000000"
        android:onClick="dismissFrame"
        android:visibility="gone"
        android:id="@+id/bg_dark"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:id="@+id/bonusFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_shadow"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/caption"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bonus"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:padding="15dp"
                android:gravity="center"
                android:drawablePadding="15dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:onClick="dismissFrame"
                android:src="@drawable/cancelicon_marron"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_dontuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:padding="15dp"
            android:text="@string/dontuse_bonus"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"
            android:onClick="dontUseCoupon"
            android:drawableLeft="@drawable/ic_checked_marroon_flip"
            android:background="@drawable/rectangle_shadow"
            android:layout_marginTop="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dividerHeight="0dp"
                android:divider="#edeef2"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/no_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/no_coupon"/>
        </FrameLayout>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicator="LineScaleParty"
        app:indicator_color="#F53700" />

</FrameLayout>



























